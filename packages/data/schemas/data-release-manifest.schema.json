{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tashkent-voxel-vision/schemas/data-release-manifest.schema.json",
  "title": "TVV Data Release Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": ["run_id", "created_at", "aoi", "sources", "notes", "artifacts"],
  "properties": {
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "aoi": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "bbox", "crs"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "bbox": {
          "type": "array",
          "minItems": 4,
          "maxItems": 4,
          "items": {
            "type": "number"
          }
        },
        "crs": {
          "type": "string",
          "pattern": "^EPSG:[0-9]+$"
        }
      }
    },
    "sources": {
      "type": "object",
      "additionalProperties": false,
      "required": ["osm"],
      "properties": {
        "osm": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "date": {
              "type": ["string", "null"],
              "format": "date-time"
            },
            "etag": {
              "type": ["string", "null"],
              "minLength": 1
            }
          }
        }
      }
    },
    "notes": {
      "type": "string"
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "sha256", "size"],
        "properties": {
          "path": {
            "type": "string",
            "minLength": 1
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-fA-F0-9]{64}$"
          },
          "size": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    }
  }
}

