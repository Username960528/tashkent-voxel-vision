{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tashkent-voxel-vision/schemas/data-release-manifest.schema.json",
  "title": "TVV Data Release Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": ["run_id", "created_at", "aoi", "sources", "notes", "artifacts"],
  "properties": {
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "aoi": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "bbox", "crs"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "bbox": {
          "type": "array",
          "minItems": 4,
          "maxItems": 4,
          "items": {
            "type": "number"
          }
        },
        "crs": {
          "type": "string",
          "pattern": "^EPSG:[0-9]+$"
        }
      }
    },
    "sources": {
      "type": "object",
      "additionalProperties": false,
      "required": ["osm"],
      "properties": {
        "osm": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "region": {
              "type": ["string", "null"],
              "minLength": 1
            },
            "url": {
              "type": ["string", "null"],
              "format": "uri"
            },
            "date": {
              "type": ["string", "null"],
              "format": "date-time"
            },
            "etag": {
              "type": ["string", "null"],
              "minLength": 1
            },
            "downloaded_at": {
              "type": ["string", "null"],
              "format": "date-time"
            },
            "path": {
              "type": ["string", "null"],
              "minLength": 1
            },
            "sha256": {
              "type": ["string", "null"],
              "pattern": "^[a-fA-F0-9]{64}$"
            },
            "size": {
              "type": ["integer", "null"],
              "minimum": 0
            },
            "dry_run": {
              "type": ["boolean", "null"]
            }
          }
        },
        "sentinel2": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "properties": {
            "provider": {
              "type": "string",
              "minLength": 1
            },
            "stac_api": {
              "type": "string",
              "format": "uri"
            },
            "collection": {
              "type": "string",
              "minLength": 1
            },
            "datetime_start": {
              "type": "string",
              "format": "date-time"
            },
            "datetime_end": {
              "type": "string",
              "format": "date-time"
            },
            "years": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            },
            "max_cloud_cover_percent": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "bands": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "red": { "type": "string", "minLength": 1 },
                "nir": { "type": "string", "minLength": 1 },
                "scl": { "type": "string", "minLength": 1 }
              }
            },
            "masking": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "method": { "type": "string", "minLength": 1 },
                "scl_exclude": {
                  "type": "array",
                  "items": { "type": "integer" }
                }
              }
            },
            "composite": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "ndvi_method": { "type": "string", "minLength": 1 },
                "min_valid_observations": { "type": "integer", "minimum": 0 }
              }
            },
            "classification": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "green_ndvi_threshold": { "type": "number" }
              }
            },
            "output_crs": {
              "type": "string",
              "pattern": "^EPSG:[0-9]+$"
            },
            "generated_at": {
              "type": "string",
              "format": "date-time"
            },
            "notes": {
              "type": "string"
            }
          }
        },
        "google_photorealistic_3d_tiles": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "properties": {
            "tileset_url": {
              "type": "string",
              "format": "uri"
            },
            "api_key_env": {
              "type": "string",
              "minLength": 1
            },
            "rendered_at": {
              "type": "string",
              "format": "date-time"
            },
            "notes": {
              "type": "string"
            }
          }
        }
      }
    },
    "notes": {
      "type": "string"
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "sha256", "size"],
        "properties": {
          "path": {
            "type": "string",
            "minLength": 1
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-fA-F0-9]{64}$"
          },
          "size": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    }
  }
}
